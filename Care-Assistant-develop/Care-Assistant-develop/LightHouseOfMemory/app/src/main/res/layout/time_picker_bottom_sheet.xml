<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_pink">

    <TextView
        android:id="@+id/texttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약 알림 설정"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        />

    <!-- 오전 오후  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:showDividers="middle"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/buttonAM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="오전" />

        <Button
            android:id="@+id/buttonPM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="오후" />
    </LinearLayout>

    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        />
    <!-- 시간 버튼  -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="2"
        android:layout_marginBottom="16dp"
        android:useDefaultMargins="true">


        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="2" />
        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="3" />
        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="4" />
        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="5" />
        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="6" />
        <Button
            android:id="@+id/button7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="7" />
        <Button
            android:id="@+id/button8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="8" />
        <Button
            android:id="@+id/button9"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="9" />
        <Button
            android:id="@+id/button10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="10" />
        <Button
            android:id="@+id/button11"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="11" />
        <Button
            android:id="@+id/button12"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="12" />
    </GridLayout>

    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        />

    <!-- 부 버튼 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="2"
        android:layout_marginBottom="16dp"
        android:useDefaultMargins="true">


        <Button
            android:id="@+id/button00"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="00" />
        <Button
            android:id="@+id/button05"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="05" />
        <Button
            android:id="@+id/mbutton10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="10" />
        <Button
            android:id="@+id/button15"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="15" />
        <Button
            android:id="@+id/button20"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="20" />
        <Button
            android:id="@+id/button25"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="25" />
        <Button
            android:id="@+id/button30"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="30" />
        <Button
            android:id="@+id/button35"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="35" />
        <Button
            android:id="@+id/button40"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="40" />
        <Button
            android:id="@+id/button45"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="45" />
        <Button
            android:id="@+id/button50"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="50" />
        <Button
            android:id="@+id/button55"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/time_button"
            android:text="55" />
    </GridLayout>

    <!-- 요일 -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:columnCount="7"
        android:useDefaultMargins="true">


        <Button
            android:id="@+id/buttonMonday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="월" />

        <Button
            android:id="@+id/buttonTuesday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="화" />

        <Button
            android:id="@+id/buttonWednesday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="수" />

        <Button
            android:id="@+id/buttonThursday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="목" />

        <Button
            android:id="@+id/buttonFriday"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="금" />

        <Button
            android:id="@+id/buttonSaturday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="토" />

        <Button
            android:id="@+id/buttonSunday"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="일" />
    </GridLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

<!--        버튼에 그림자나 테두리 넣을 수 있는지 -->
        <!--android:elevation="20dp"
            android:stateListAnimator="@null"
             는 일단 안됨-->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/light_pink"
            android:text="저장"
            />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/light_pink"
            android:text="삭제" />
    </LinearLayout>
</LinearLayout>
