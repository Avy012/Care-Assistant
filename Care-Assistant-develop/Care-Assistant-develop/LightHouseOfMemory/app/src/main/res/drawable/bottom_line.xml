<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 아래쪽 선 -->
    <item android:gravity="bottom"> <!-- 아래쪽에만 선을 배치 -->
        <shape android:shape="rectangle">
            <solid android:color="#A9A9A9"/> <!-- 선 색상 -->
            <size android:height="1dp"/> <!-- 선 두께 -->
        </shape>
    </item>

    <!-- 투명 배경 (선 위로 배경이 나오지 않게 위치 조정) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- 투명 배경 -->
        </shape>
    </item>
</layer-list>
